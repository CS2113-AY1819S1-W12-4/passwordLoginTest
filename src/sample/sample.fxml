<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #20120F;">
         <children>
            <ImageView fitHeight="400.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/grand_universe_by_antifan_real1.jpg" />
               </image>
            </ImageView>
            <AnchorPane layoutX="344.0" layoutY="39.0" prefHeight="299.0" prefWidth="298.0" style="-fx-background-color: #9C2827;">
               <children>
                  <Label layoutX="109.0" layoutY="14.0" text="Sign in" textFill="#f2efef">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameF" layoutX="75.0" layoutY="80.0" />
                  <Button layoutX="124.0" layoutY="213.0" mnemonicParsing="false" onAction="#handleButtonAction" text="Button" />
                  <PasswordField fx:id="passwordF" layoutX="75.0" layoutY="116.0" />
                  <Label fx:id="label" layoutX="88.0" layoutY="172.0" prefHeight="26.0" prefWidth="98.0" textFill="#f2eeee" />
               </children>
            </AnchorPane>
            <Label layoutX="113.0" layoutY="92.0" prefHeight="47.0" prefWidth="142.0" text="Welcome to ..." textFill="#f2ecec" />
            <Button alignment="CENTER" layoutX="59.0" layoutY="238.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="188.0" style="-fx-background-color: #9C2827;" text="Sign up" textFill="#fdf8f8" />
            <Label layoutX="650.0" layoutY="6.0" onMouseClicked="#handleClose" text="X" textFill="#ede8e8">
               <font>
                  <Font size="28.0" />
               </font>
            </Label>
            <Label layoutX="125.0" layoutY="38.0" prefHeight="56.0" prefWidth="142.0" text="Label" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
